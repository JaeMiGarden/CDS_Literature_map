extends layouts/map

block content
    p
        label 제목 : #{posting.title}
    p
        label 본문 : #{posting.body}
    p
        label 저자 : #{posting.author}
    p
        label 날짜 : #{posting.date}
    br
    
    img(src=`/uploads/${posting.image}` alt="No image", style={width:'300px', height:'350px'})

    button(id="delete" type="submit" value="DELETEING")
    script.
        function getDelete(){
            $.ajax({
                async:false,
                type:"get",
                url: `/board/delete/#{posting.id}`,
                success:function(res){
                    location.href='../';
                }
            })
        }
        const button = document.getElementById('delete');
        button.addEventListener("click", getDelete);
